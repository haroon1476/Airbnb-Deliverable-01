<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            app:tint="@color/black"></ImageView>

    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login or sign up to Airbnb"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Country/Region\nPakistan"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center"
            android:padding="10dp"
            android:paddingVertical="14dp"
            android:layout_marginHorizontal="15dp"
            android:paddingHorizontal="70dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Phone number\n+92"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="left"
            android:padding="10dp"
            android:paddingVertical="14dp"
            android:paddingHorizontal="70dp"
            android:layout_marginHorizontal="15dp"
            android:textAlignment="textStart"
            />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We'll call or text you to confirm your number.Standard\n messages and data rates apply"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:textColorLink="@color/grey_700">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:padding="20dp"
            android:paddingVertical="14dp"
            android:paddingHorizontal="70dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------------------   or    --------------------------------"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardview_light_background"
            android:text="Continue with Email"


            android:textColor="@color/black_100"
            android:layout_marginHorizontal="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:padding="20dp"
            android:paddingVertical="14dp"
            android:paddingHorizontal="70dp"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:icon="@drawable/facebook"

            android:text="Continue with facebook"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginHorizontal="15dp"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:padding="20dp"
            android:layout_marginTop="7dp"
            android:paddingHorizontal="70dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:icon="@drawable/email"

            android:text="Coninue with Google"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:padding="20dp"
            android:layout_marginTop="7dp"
            android:paddingHorizontal="70dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:icon="@drawable/phone"

            android:text="Continue with Apple"
            android:textColor="@color/black"
            android:padding="20dp"
            android:layout_marginHorizontal="15dp"
            android:textSize="15dp"
            android:paddingVertical="14dp"
            android:gravity="center"
            android:strokeColor="@color/black"
            app:strokeWidth="1dp"
            android:layout_marginTop="7dp"
            android:paddingHorizontal="70dp" />

    </LinearLayout>

</LinearLayout>

