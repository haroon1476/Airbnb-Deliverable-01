<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_24">
            </ImageView>

        </Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish signing up"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal name"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="First name on ID"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="70dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Surname on ID"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="70dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Make sure this matches the name on your government-issued ID.If you go by another name, you can add a preffered first name."
            android:textColor="@color/grey_700"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:textColorLink="@color/grey_700">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Date of birth"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="70dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To sign up,you need to be at least 18.Other people who use Airbnb won't see your date of birth."
            android:textColor="@color/grey_700"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:textColorLink="@color/grey_700">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Email"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="70dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We will email you a reservation confirmation."
            android:textColor="@color/grey_700"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:textColorLink="@color/grey_700">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Password"
                android:textColor="@color/grey_700"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="14dp"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="70dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By selecting Agree and Continue,I agree to Airbnb's Terms of Service, Payments Terms of Service and Anti-Discrimination Policy,and acknowledge the Privacy Policy."
            android:textColor="@color/grey_700"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="25dp"
            android:textColorLink="@color/grey_700">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_500"
                android:text="Continue"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:padding="20dp"
                android:paddingVertical="14dp"
                android:paddingHorizontal="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>



    </LinearLayout>

</ScrollView>
